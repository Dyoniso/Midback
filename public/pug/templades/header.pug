header(class="m-4")
    - if (!headerMode) headerMode = 1

    
    if (headerMode === 1)
        div(class="text-center")      
            a(href=(bdgePath + "/") class="title" style="font-family:'rowdies';color:var(--color-title-home)") MIDBACK 2D

    if (headerMode === 22)
        div(class="text-center")      
            a(href=(bdgePath + "/") class="title p-0" style="font-family:'rowdies';white-space: pre;") MIDBACK ADMIN
       
    else if (headerMode === 2 || headerMode === 6)
        div(class="text-center mt-2")    
            a(href=(bdgePath + "/") class="title" style="font-family:'rowdies';color:var(--color-title-image)") MIDBACK 2D
            
            if holidays === 'halloween'
                h6(class="halloween-font" style="font-family:'halloween';") Halloween Edition
            else if holidays === 'natal'
                h6(class="christmas-title" style="font:'bolder' 18px boulder;") We wish everyone a merry Christmas    
            else
                h6(class="anim-color-change") ▲ Infinite image interaction ▲

    else if (headerMode === 3 || headerMode === 8 || headerMode === 9)
        div(class="text-center mt-2")
            a(href=(bdgePath + "/") class="title" style="font-family:'rowdies';color:var(--color-title-video)") MIDBACK 2D

            if holidays === 'halloween'
                h6(class="halloween-font" style="font-family:'halloween';") Halloween Edition
            else if holidays === 'natal'
                h6(class="christmas-title" style="font-family:'bolder';") We wish everyone a merry Christmas
            else
                h6(class="anim-color-change") ▲ Infinite video interaction ▲

    else if (headerMode === 10 || headerMode === 12 || headerMode === 14)
        div(class="text-center mt-2")    
            a(href=(bdgePath + "/") class="title" style="font-family:'rowdies';color:var(--color-title-audio)") MIDBACK 2D

            if holidays === 'halloween'
                h6(class="halloween-font") Halloween Edition
            else if holidays === 'natal'
                h6(class="christmas-title") We wish everyone a merry Christmas
            else
                h6(class="anim-color-change") ▲ Infinite audio interaction ▲     

    else if (headerMode === 4)
        div(class="text-center mt-2")  
            span(class="title" style="font-family:'rowdies';color:var(--color-title-home)") MIDBACK 2D

            if holidays === 'halloween'
                h6(class="main-title") ▲ Endless interaction of images and other files. Hallowen edition of !{new Date().getFullYear()} !{'</br>'} MIDPASSPORT - unlimited promotion for 1 image ▲
            else if holidays === 'natal'
                h6(class="main-title") ▲ Endless interaction of images and other files. Christmas edition of !{new Date().getFullYear()} !{'</br>'} MIDPASSPORT - unlimited promotion for 1 image ▲
            else
                h6(class="main-title") ▲ Endless interaction of images and other files. Get your passport now !{'</br>'} MIDPASSPORT - unlimited promotion for 1 image ▲
    else if (headerMode === 18)
        div(class="search-container")
            div(class="text-center")      
                a(href=(bdgePath + "/") class="search-title" style="font-family:'rowdies';") MULT FILE SEARCH

            form(action=(bdgePath + "/search") class="passport-form" method="POST" enctype="multipart/form-data")
                div(class="input-group")
                    input(type="text" class="form-control" placeholder="Find lost images, videos or audios in the Midback hole")

    if (headerMode === 2 || headerMode === 3 || headerMode === 8 || headerMode === 14)
        if (admin === true)
            div(class="text-center")
                if (aclAdmin === true)
                    h6 
                        a(class="color-accent" href=(board === boards.VIDEOS.path ? (bdgePath + '/v') : board === boards.AUDIOS.path ? (bdgePath +'/a') : (bdgePath +'/i'))) - Mode : Admin -
                else
                    h6
                        a(class="color-accent" href=((board === boards.VIDEOS.path ? (bdgePath +'/v') : board === boards.AUDIOS.path ? (bdgePath +'/a') : (bdgePath +'/i')) + "?mode=admin")) - Moderate board -

        //-if (mode === 'normal')
            div(class="text-center")
                div Passport Expires in: 
                    span(id="stopwatch" class="color-accent") #{exp.minutes}/#{exp.seconds}  

    if (headerMode === 2 || headerMode === 3 || headerMode === 14)
        if (mode !== 'admin')
            div(class="container thread-container")
                if (postEnabled === true)
                    form(action=((board === boards.VIDEOS.path ? `${bdgePath}/${boards.VIDEOS.path}/` : board === boards.AUDIOS.path ? `${bdgePath}/${boards.AUDIOS.path}/` : `${bdgePath}/${boards.IMAGES.path}/`) + 'passport') class="passport-form" method="POST" enctype="multipart/form-data")
                        div(class="form-group")
                            label(class="w-100 drag-file" for="postFile")
                                div(class="text-center" id="postFileTitle") Select or Drop the file

                            if (board === boards.VIDEOS.path)
                                div(style="font-size:12px" align="left") Accept: wmv, avi, mov, webm, mkv, mp4 - Max: 4 files and 10mb / file
                            else if (board === boards.AUDIOS.path)
                                div(style="font-size:12px" align="left") Accept: mp3 aac wav flac ogg - Max: 4 files and 10mb / file
                            else
                                div(style="font-size:12px" align="left") Accept: Gif, png, jpeg, bmp, webp - Max: 4 files and 4mb / file

                            div(style="font-size:12px" align="left")  Note: Please do not post Nazism, CP, EXTREME GORE or Break Anonymity, your image will be deleted

                            input(type="file" id="postFile" name="files" multiple accept=(board === boards.VIDEOS.path ? 'video/*' : board === boards.AUDIOS.path ? 'audio/*' : 'image/*'))
                            div(class="p-2" id="filePreview")

                            div(class="d-flex")
                                div(class="mr-auto mt-auto mb-auto")
                                    input(class="tag-input" placeholder="Insert TAG" name="tag" id="tagInput" style=(vip ? 'color:var(--color-accent-vip)' : '')) 
                                div(class="ml-auto")    
                                    button(class="btn btn-danger font-weight-bold") POST
    hr                    


