doctype html
html
    include ./head.pug
    style(id="fontStyle")
    include ./themeChecker.pug

    body(class="theme-templade" style=(styleTheme))
        if (!vip)
            include ./adsContent.pug
        include ./header.pug

        section
            input(type="hidden" id="boardPath" value=(board))
            
            div(class="container")
                div(class="text-center")
                    div Unable to process your post. The following errors occurred
                    div(class="p-2 text-danger font-weight-bold" style="font-size:18px;word-break:break-all") !{message}
                    h6(class="pixel-font" id="redirectTimer") You will be redirected on 
                        span 5

        include ./fotter.pug
        if (!vip)
            include ./adsContent.pug

        script(src=(bdgePath + "/pub/fonts.js")) 
        script.
            let c = 5
            let interval = setInterval(() => {
                $('#redirectTimer').children('span').text(c)
                if (c-- <= 0) {
                    clearInterval(interval)
                    history.go(-1)
                }
            }, 1000)        
                                  